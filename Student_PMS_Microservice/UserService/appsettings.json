{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // JWT Settings
  "Jwt": {
    "SecretKey": "SPMS_UserService_SecretKey!",
    "Issuer": "SPMS_UserService",
    "Audience": "SPMS_UserService",
    "ExpiryMinutes": 60
  },
  // DB Connection String
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "myConnectionString": "server=LAPTOP-9S570SUD\\SQLEXPRESS; database=SPMS_UserService; trusted_connection=true; TrustServerCertificate=True;"
  },
  // Serilog Configuration
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Properties": {
      "Application": "UserService"
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },
  // Microservice URLs
  "MicroserviceUrls": {
    "ProjectGroupServiceBaseUrl": "https://localhost:7242",
    "ProjectServiceBaseUrl": "https://localhost:7096"
  },
  // Hangfire configuration (SQL storage and dashboard)
  "Hangfire": {
    "ConnectionStringName": "server=LAPTOP-9S570SUD\\SQLEXPRESS; database=SPMS_UserService; trusted_connection=true; TrustServerCertificate=True;",

    // SQL Server storage specific options
    "SqlServer": {
      // optional schema for Hangfire tables
      "SchemaName": "hangfire",
      // recommended polling interval for queues (TimeSpan format)
      "QueuePollInterval": "00:00:15",
      // if true, disables distributed locks (not recommended for production)
      "DisableGlobalLocks": false
    },

    // Dashboard configuration
    "Dashboard": {
      // URL path where dashboard will be mounted (e.g. https://hostname/hangfire)
      "Path": "/hangfire",
      // If you want to protect the dashboard, replace false with true and configure authorization in code.
      "RequireAuthorization": false,
      // Optionally list allowed roles (used if you implement an authorization filter in code)
      "AllowedRoles": []
    }
  }
}
